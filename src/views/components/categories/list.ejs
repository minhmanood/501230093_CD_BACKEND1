<div class="content">
    <div class="container-fluid">
        <div class="flex row justify-content-between m-2">
            <h4 class="page-title">Danh sách sản phẩm</h4>
            <a href="/categories/create" class="btn btn-default" >Tạo sản phẩm </a>
        </div>
        <div class="card">

            <div class="card-body">
                <table class="table table-head-bg-success">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">IMAGE</th>
                            <th scope="col">CODE</th>
                            <th scope="col">NAME</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(function(category,index){ %>
                            <tr>
                                <td>
                                    <%=index+1%>
                                </td>
                                <td>
                                    <img src="<%= category.image%>" alt="image" class="">
                                </td>
                                <td>
                                    <%= category.code%>
                                </td>
                                <td>
                                    <%= category.name%>
                                </td>
                                <td>
                                    <a href="/categories/update/<%=category._id%>" class="btn btn-primary btn-sm">cập nhật sản phẩm </a>
                                </td>
                                

                            </tr>
                            <% }) %>



                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>