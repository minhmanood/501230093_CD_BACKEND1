<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Tạo loại sản phẩm mới </h4>
        <div class="card">
            <div class="card">
             
                <div class="card-body">
                    <form action="/categories/create" method="post">
                        <div class="form-group">
                            <label for="code">Mã sản phẩm </label>
                            <input name="code" type="text" class="form-control" id="code"
                                placeholder="Nhập mã sản phẩm ">

                        </div>
                        <div class="form-group">
                            <label for="name">Tên sản phẩm </label>
                            <input name="name" type="text" class="form-control" id="name"
                                placeholder="Nhập tên hình ảnh ">

                        </div>
                        <div class="form-group">
                            <label for="image">Link hình ảnh </label>
                            <input name="image" type="text" class="form-control" id="image"
                                placeholder="Nhập hình ảnh ">

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success" type="submit">Tạo</button>
                            <a href="/categories" class="btn btn-primary">trở về trang chủ</a>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>