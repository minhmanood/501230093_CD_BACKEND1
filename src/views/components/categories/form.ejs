<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">
            <% if (mode==="Create" ) {%>
                Tao san pham moi
                <%}%>
                    <% if (mode==="Update" ) {%>
                        cap nhat san pham
                        <%}%>

        </h4>
        <div class="card">
            <div class="card">

                <div class="card-body">
                    <% if (mode==="Create" ) {%>
                        <form action="/categories/create" method="post">
                            <%}%>
                                <% if (mode==="Update" ) {%>
                                    <form action="/categories/update" method="post">
                                        <div class="form-group hide">

                                            <input name="id" type="text" value="<%=category?._id%>" id="id"
                                                placeholder="Nhập mã sản phẩm ">

                                        </div>
                                        <%}%>

                                            <div class="form-group ">
                                                <label for="code">Mã sản phẩm </label>
                                                <input name="code" type="text" value="<%=category ?.code%>"
                                                    class="form-control" id="code" placeholder="Nhập mã sản phẩm ">

                                            </div>
                                            <div class="form-group">
                                                <label for="name">Tên sản phẩm </label>
                                                <input value="<%=category?.name%>" name="name" type="text"
                                                    class="form-control" id="name" placeholder="Nhập tên hình ảnh ">

                                            </div>
                                            <div class="form-group">
                                                <label for="image">Link hình ảnh </label>
                                                <input value="<%=category.image%>" name="image" type="text"
                                                    class="form-control" id="image" placeholder="Nhập hình ảnh ">

                                            </div>
                                            <div class="card-action">
                                                <% if (mode==="Create" ) {%>
                                                    <button class="btn btn-success" type="submit">Tạo</button>
                                                    <%}%>
                                                        <% if (mode==="Update" ) {%>
                                                            <button class="btn btn-success" type="submit">cập nhật sản
                                                                phẩm</button>
                                                            <%}%>

                                                                <a href="/categories" class="btn btn-primary">trở về
                                                                    trang chủ</a>
                                            </div>
                                    </form>

                </div>

            </div>
        </div>
    </div>
</div>